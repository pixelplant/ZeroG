<routes>
	<!-- this is the default route -->
	<route>
		<from>/</from>
		<to>
			<controller>cms</controller>
			<action>index</action>
		</to>
	</route>
	<!-- sample route which loads the French locale -->
	<route>
		<from>fr/:controller/:action</from>
		<from>fr/:controller</from>
		<to>
			<locale>fr_FR</locale>
		</to>
	</route>
	<!-- sample route which loads the romanian locale -->
	<route>
		<from>ro/:controller/:action</from>
		<from>ro/:controller</from>
		<to>
			<locale>ro_RO</locale>
		</to>
	</route>
</routes>
