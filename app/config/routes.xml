<routes>
	<!-- context variables and their value -->
	<context>
		<locale>
			<translate from="fr_FR" to="fr" />
			<translate from="ro_RO" to="ro" />
		</locale>
		<type>
			<translate from="100" to="print" />
			<translate from="101" to="rss" />
			<translate from="102" to="xml" />
		</type>
	</context>
	<!-- this is the default route -->
	<route>
		<from>/</from>
		<to>
			<module>Pixelplant_Blog</module>
			<controller>index</controller>
			<action>index</action>
		</to>
	</route>
	<route>
		<from>cms</from>
		<from>cms/:controller</from>
		<from>cms/:controller/:action</from>
		<to>
			<module>Pixelplant_Blog</module>
		</to>
	</route>
	<!-- sample route which loads the French locale -->
	<route>
		<from>fr/:module/:controller/:action</from>
		<from>fr/:module/:controller</from>
		<from>fr/:module</from>
		<to>
			<locale>fr_FR</locale>
			<module>Pixelplant_Blog</module>
		</to>
	</route>
	<!-- sample route which loads the romanian locale -->
	<route>
		<from>ro/:module/:controller/:action</from>
		<from>ro/:module/:controller</from>
		<from>ro/:module</from>
		<to>
			<locale>ro_RO</locale>
			<module>Pixelplant_Blog</module>
		</to>
	</route>
</routes>
