<?xml version="1.0" encoding="UTF-8"?>
<!--
	Backend menu for the blog extension
	@module: Pixelplant_Blog
	@author: Radu Mogos
	@website: www.pixelplant.ro
	@created: 09.01.2012
-->
<config>
	<menu>
		<blog>
			<helper>blog</helper>
			<title>Blog</title>
			<sort_order>100</sort_order>
			<children>
				<list>
					<helper>blog</helper>
					<title>All Posts</title>
					<sort_order>10</sort_order>
					<action>blog_admin/admin_list/posts</action>
					<children>
						<new_post>
							<helper>blog</helper>
							<title>Add new post</title>
							<sort_order>10</sort_order>
						</new_post>
					</children>
				</list>
				<comments>
					<helper>blog</helper>
					<title>Comments</title>
					<sort_order>20</sort_order>
				</comments>
				<categories>
					<helper>blog</helper>
					<title>Categories</title>
					<sort_order>30</sort_order>
					<action>blog_admin/admin_list/categories</action>
				</categories>
				<attributes>
					<helper>blog</helper>
					<title>Attributes</title>
					<sort_order>40</sort_order>
				</attributes>
				<settings>
					<helper>blog</helper>
					<title>Blog settings</title>
					<sort_order>100</sort_order>
					<action>blog_admin/settings</action>
				</settings>
			</children>
		</blog>
	</menu>
</config>