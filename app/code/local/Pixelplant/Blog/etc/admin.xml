<?xml version="1.0" encoding="UTF-8"?>
<!--
	Backend menu for the blog extension
	@module: Pixelplant_Blog
	@author: Radu Mogos
	@website: www.pixelplant.ro
	@created: 09.01.2012
-->
<config>
	<menu>
		<pixelplant_blog>
			<helper>blog</helper>
			<title>Blog</title>
			<sort_order>100</sort_order>
			<children>
				<blog_list>
					<helper>blog</helper>
					<title>All Posts</title>
					<sort_order>10</sort_order>
					<action>blog_admin/admin_list</action>
					<children>
						<blog_new_post>
							<helper>blog</helper>
							<title>Add new post</title>
							<sort_order>10</sort_order>
						</blog_new_post>
					</children>
				</blog_list>
				<blog_comments>
					<helper>blog</helper>
					<title>Comments</title>
					<sort_order>20</sort_order>
				</blog_comments>
				<blog_categories>
					<helper>blog</helper>
					<title>Categories</title>
					<sort_order>30</sort_order>
				</blog_categories>
				<blog_attributes>
					<helper>blog</helper>
					<title>Attributes</title>
					<sort_order>40</sort_order>
				</blog_attributes>
				<blog_settings>
					<helper>blog</helper>
					<title>Blog settings</title>
					<sort_order>100</sort_order>
					<action>blog_admin/settings</action>
				</blog_settings>
			</children>
		</pixelplant_blog>
	</menu>
</config>