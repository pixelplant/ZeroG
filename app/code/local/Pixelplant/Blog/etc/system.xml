    Description:
        Backend config data for the blog extension
-->

<config>
	<tabs>
		<pixelplant>
			<helper>blog</helper>
			<label>Pixelplant</label>
			<sort_order>200</sort_order>
		</pixelplant>
	</tabs>
	<sections>
		<pixelplant_blog>
			<label>Blog settings</label>
			<helper>blog</helper>
			<tab>pixelplant</tab>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_website_view>1</show_in_website_view>
			<groups>
				<options>
					<label>Blog options</label>
					<helper>blog</helper>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_website_view>1</show_in_website_view>
					<fields>
						<title>
							<helper>blog</helper>
							<label>Blog title</label>
							<sort_order>10</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_website_view>1</show_in_website_view>
						</title>
						<limit>
							<helper>blog</helper>
							<label>Number of articles per page</label>
							<sort_order>10</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_website_view>1</show_in_website_view>
						</limit>
					</fields>
				</options>
				<menu>
					<label>Menu settings</label>
					<helper>blog</helper>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_website_view>1</show_in_website_view>
					<fields>
						<category_enable>
							<helper>blog</helper>
							<label>Enable categories menu</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>admin/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_website_view>1</show_in_website_view>
						</category_enable>
						<limit>
							<helper>blog</helper>
							<label>Number of tag clouds to display</label>
							<sort_order>10</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_website_view>1</show_in_website_view>
						</limit>
					</fields>
				</menu>
				<comments>
					<label>Comments</label>
					<helper>blog</helper>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_website_view>1</show_in_website_view>
					<fields>
						<enable>
							<frontend_type>select</frontend_type>
							<source_model>admin/system_config_source_yesno</source_model>
							<helper>blog</helper>
							<label>Enable comments</label>
							<show_in_default>1</show_in_default>
						</enable>
					</fields>
				</comments>
			</groups>
		</pixelplant_blog>
	</sections>
</config>