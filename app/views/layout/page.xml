        The base xml layout specifying the structure of the page
-->

<layout version="1.0">
	<default>
		<block type="page/html" name="root" template="page/main.php">
			<block type="page/html/head" name="head" template="page/html/head.php">
				<action method="addCss"><stylesheet>public/css/reset.css</stylesheet></action>
				<action method="addCss"><stylesheet>public/css/style.css</stylesheet></action>
				<action method="addCss"><stylesheet>public/css/theme-cool.css</stylesheet></action>
				<action method="addJs"><script>public/js/jquery-1.5.min.js</script></action>
				<action method="addJs"><script>public/js/ajax_calls.js</script></action>
			</block>
			<block type="base" name="header" template="page/html/header.php">
				<block type="base" name="mainmenu" template="page/html/header/mainmenu.php" />
			</block>
			<block type="base" name="left">
				<block type="base" name="ads" />
				<block type="base" name="menu" template="page/left/menu.php">
					<block type="base" name="left.mainmenu" template="page/left/menu/mainmenu.php"/>
					<block type="base" name="left.submenu" />
				</block>
			</block>
			<block type="base" name="right" />
			<block type="base" name="content" template="cms/content.php"/>
			<block type="base" name="footer" template="page/footer.php"/>
		</block>
	</default>

	<print>
		<block type="page/html" name="root" template="page/print.php">
			<action method="addCss"><stylesheet>public/css/print.css</stylesheet><params>media="print"</params></action>
		</block>
	</print>

	<cms_index>
		<!--<reference name="root.head">
			<action method="addCss"><stylesheet>public/css/print.css</stylesheet></action>
			<block type="reference" name="reference" />
		</reference>-->
		<reference name="root">
			<action method="setTemplate"><template>page/1col.php</template></action>
		</reference>
		<reference name="left">
			<action method="unsetChild"><name>menu</name></action>
		</reference>
		<reference name="right">
			<action method="setTemplate"><template>page/right.php</template></action>
		</reference>
	</cms_index>

	<cms_ajax>
		<reference name="root">
			<action method="setTemplate"><template>page/2col.php</template></action>
		</reference>
		<reference name="head">
			<action method="removeCss"><stylesheet>public/css/theme-cool.css</stylesheet></action>
		</reference>
		<reference name="right">
			<action method="setTemplate"><template>page/right2.php</template></action>
		</reference>
		<!--<reference name="root.left">
			<action method="unsetChild"><name>root.left.menu</name></action>
		</reference>-->
	</cms_ajax>
</layout>
