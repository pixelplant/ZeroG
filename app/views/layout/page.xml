        The base xml layout specifying the structure of the page
-->

<layout version="1.0">
	<default>
		<block type="page/html" name="root" template="page/main.php">
			<block type="page/html/head" name="head" as="head" template="page/html/head.php">
				<action method="addJs"><script>public/js/jquery-1.4.3.min.js</script></action>
				<action method="addCss"><stylesheet>public/css/reset.css</stylesheet></action>
				<action method="addCss"><stylesheet>public/css/style.css</stylesheet></action>
				<action method="addCss"><stylesheet>public/css/theme-cool.css</stylesheet></action>
			</block>
			<block type="test" name="header" as="header"/>
			<block type="test" name="left" as="left">
				<block type="test" name="ads" />
				<block type="test" name="menu" template="page/left/menu/mainmenu.php">
					<block type="test" name="mainmenu"/>
					<block type="test" name="submenu" />
				</block>
			</block>
			<block type="test" name="content" template="cms/content.php"/>
			<block type="test" name="breadcrumbs" as="breadcrumbs"/>
		</block>
	</default>

	<print>
		<block type="page/html" name="root" template="page/print.php">
			<action method="addCss"><stylesheet>public/css/print.css</stylesheet><params>media="print"</params></action>
		</block>
	</print>

	<cms_index>
		<!--<reference name="root.head">
			<action method="addCss"><stylesheet>public/css/print.css</stylesheet></action>
			<block type="reference" name="reference" />
		</reference>-->
		<reference name="root.left.menu">
			<block type="page/menu" name="level3_menu" />
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/1col.php</template></action>
			<block type="test" name="breadcrumbs" template="page/html/head.php"/>
			<block type="test" name="content" template="cms/currency.php" />
		</reference>
	</cms_index>

	<cms_ajax>
		<reference name="root">
			<action method="setTemplate"><template>page/2col.php</template></action>
		</reference>
		<block type="test" name="root.left.menu" template="" />
	</cms_ajax>
</layout>
